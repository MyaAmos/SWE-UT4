<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parentQuestion"
    android:background="@color/background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtQuestionMain"
        android:text="Question Main"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtQuestionDetail"
        android:layout_below="@+id/txtQuestionMain"
        android:text="Question detail"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="16sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtQuestionDetail"
        android:layout_centerInParent="true">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkBoxQuestionYes"
            android:text="Yes"
            android:textColor="@color/white"
            android:buttonTint="@color/white"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkBoxQuestionNo"
            android:layout_toRightOf="@+id/chkBoxQuestionYes"
            android:layout_marginStart="20dp"
            android:text="No"
            android:textColor="@color/white"
            android:buttonTint="@color/white"/>

    </RelativeLayout>

</RelativeLayout>