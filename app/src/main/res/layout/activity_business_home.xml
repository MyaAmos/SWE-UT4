<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:clipToPadding="false"
    tools:context=".BusinessHome">


    <View
        android:id="@+id/backgroundRectangle1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bus_rect_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/backgroundRectangle2"
        android:layout_width="match_parent"
        android:layout_height="479dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bus_rect_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/guestLines"
        android:layout_width="56dp"
        android:layout_height="32dp"
        android:layout_marginRight="351dp"
        android:layout_marginBottom="610dp"
        android:background="@drawable/lines_green"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txtViewCARE"
        android:elevation="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textColor="@color/background"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgShield"
        android:elevation="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/shield"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewCARE" />

    <LinearLayout
        android:id="@+id/btnAppointments"
        android:layout_width="118dp"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:elevation="4dp"
        android:background="@drawable/my_button"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgShield"
        android:orientation="vertical"
        android:focusable="true">

        <ImageView
            android:id="@+id/btnAppointmentsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/appointment"
            app:tint="@color/white"/>

        <TextView
            android:id="@+id/btnAppointmentsText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/bus_appts"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnManageOfficers"
        android:layout_width="118dp"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:elevation="4dp"
        android:background="@drawable/my_button"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAppointments"
        android:orientation="vertical"
        android:focusable="true">

        <ImageView
            android:id="@+id/btnManageOfficersIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/officer"
            app:tint="@color/white"/>

        <TextView
            android:id="@+id/btnManageOfficersText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/manage_officers"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnCalendarBusiness"
        android:layout_width="118dp"
        android:layout_height="115dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:elevation="4dp"
        android:background="@drawable/my_button"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnManageOfficers"
        android:orientation="vertical"
        android:focusable="true">

        <ImageView
            android:id="@+id/btnCalendarBusinessIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/calendar"
            app:tint="@color/white"/>

        <TextView
            android:id="@+id/btnCalendarBusinessText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/calendar"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
