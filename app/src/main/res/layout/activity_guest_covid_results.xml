<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuestCovidResults"
    android:background="@color/white">

    <View
        android:id="@+id/bgRectangle2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle2"
        android:layout_marginBottom="250dp"
        ></View>

    <TextView
        android:id="@+id/tvSurveyResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="33sp"
        android:text="@string/covid_survey_results"
        android:layout_marginTop="15sp"
        ></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSurveyResults"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_below="@id/tvSurveyResults"
        android:layout_marginTop="15dp"
        ></androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btnAccountHome"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/button_color"
        android:layout_below="@id/rvSurveyResults"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/account_home"
        android:textColor="@color/white"
        ></Button>

</RelativeLayout>